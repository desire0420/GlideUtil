<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_catch_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取Glide磁盘缓存大小" />

    <Button
        android:id="@+id/btn_catch_clean_disk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/glide_clean" />

    <Button
        android:id="@+id/btn_catch_clean_disk_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/glide_clean_catch_disk_self" />

    <Button
        android:id="@+id/btn_catch_clean_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/glide_catch_memory" />

</LinearLayout>
